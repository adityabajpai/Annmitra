<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.asus.annmitra2.Views.ShopActivity">

    <Button
        android:id="@+id/RationShop"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50sp"
        android:layout_marginEnd="50sp"
        android:layout_marginStart="50sp"
        android:gravity="center"
        android:text="@string/rationShopsList"
        android:textSize="25sp" />

    <Button
        android:id="@+id/paddyGrainsSubmission"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RationShop"
        android:layout_marginEnd="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:text="@string/procurementCentre"
        android:textSize="25sp" />

</RelativeLayout>
